<Window x:Class="StatisticsAnalysisTool.Views.FishingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:viewModels="clr-namespace:StatisticsAnalysisTool.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:FishingWindowViewModel}"
        Title="Fishing Bot - Albion Online" 
        Height="800" Width="1200" MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        BorderThickness="1,1,1,1"
        BorderBrush="{StaticResource SolidColorBrush.Background.3}"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <Style x:Key="FishingButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SolidColorBrush.Background.2}"/>
            <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.1}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource SolidColorBrush.Background.3}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SolidColorBrush.Accent.Blue.4}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource SolidColorBrush.Accent.Blue.3}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        
        <Style x:Key="StatBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SolidColorBrush.Background.2}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SolidColorBrush.Background.3}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource SolidColorBrush.Background.1}">
        <!-- Header com controles da janela -->
        <Grid ZIndex="1" Height="40" VerticalAlignment="Top" Background="{StaticResource SolidColorBrush.Background.2}" 
              MouseDown="Hotbar_MouseDown" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource SolidColorBrush.Background.3}"/>
            
            <!-- Título e Status -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                <fa5:ImageAwesome Icon="Solid_Fish" Foreground="{StaticResource SolidColorBrush.Accent.Blue.3}" 
                                  Width="20" Height="20" Margin="0,0,8,0"/>
                <TextBlock Text="Fishing Bot" FontSize="16" FontWeight="Bold" 
                           Foreground="{StaticResource SolidColorBrush.Text.1}" VerticalAlignment="Center"/>
                <Ellipse Style="{StaticResource StatusIndicatorStyle}" Fill="{Binding BotStatusColor}"/>
                <TextBlock Text="{Binding BotStatusText}" FontSize="12" 
                           Foreground="{StaticResource SolidColorBrush.Text.2}" Margin="5,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Controles da janela -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Style="{StaticResource WindowButtonStyle}" Content="0" Margin="0,0,5,0" Click="MinimizeButton_Click"/>
                <Button x:Name="MaximizedButton" Style="{StaticResource WindowButtonStyle}" Content="1" Margin="0,0,5,0" Click="MaximizeButton_Click"/>
                <Button Style="{StaticResource WindowButtonStyle}" Content="r" Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- Conteúdo Principal -->
        <Grid Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            
            <!-- Painel Esquerdo - Estatísticas e Inventário -->
            <Grid Grid.Column="0" Background="{StaticResource SolidColorBrush.Background.2}" Margin="0,0,1,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Estatísticas do Bot -->
                <Border Grid.Row="0" Style="{StaticResource StatBoxStyle}" Margin="5,5,5,2">
                    <StackPanel>
                        <TextBlock Text="LIVE STATISTICS" FontWeight="Bold" FontSize="14" 
                                   Foreground="{StaticResource SolidColorBrush.Accent.Purple.3}" Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- FISH -->
                            <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource SolidColorBrush.Accent.Green.4}" 
                                    CornerRadius="3" Padding="8,4" Margin="1">
                                <StackPanel>
                                    <TextBlock Text="FISH" FontWeight="Bold" FontSize="10" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding FishCaught}" FontSize="16" FontWeight="Bold" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- TRASH -->
                            <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource SolidColorBrush.Accent.Orange.4}" 
                                    CornerRadius="3" Padding="8,4" Margin="1">
                                <StackPanel>
                                    <TextBlock Text="TRASH" FontWeight="Bold" FontSize="10" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding TrashCaught}" FontSize="16" FontWeight="Bold" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- BAIT -->
                            <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource SolidColorBrush.Accent.Blue.4}" 
                                    CornerRadius="3" Padding="8,4" Margin="1">
                                <StackPanel>
                                    <TextBlock Text="BAIT" FontWeight="Bold" FontSize="10" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding BaitStatus}" FontSize="12" FontWeight="Bold" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- FOOD -->
                            <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource SolidColorBrush.Accent.Red.4}" 
                                    CornerRadius="3" Padding="8,4" Margin="1">
                                <StackPanel>
                                    <TextBlock Text="FOOD" FontWeight="Bold" FontSize="10" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding FoodStatus}" FontSize="12" FontWeight="Bold" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- FAILS -->
                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="{StaticResource SolidColorBrush.Accent.Red.4}" 
                                    CornerRadius="3" Padding="8,4" Margin="1">
                                <StackPanel>
                                    <TextBlock Text="FAILS" FontWeight="Bold" FontSize="10" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Failures}" FontSize="16" FontWeight="Bold" 
                                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Status do Bot -->
                <Border Grid.Row="1" Style="{StaticResource StatBoxStyle}" Margin="5,2,5,2">
                    <StackPanel>
                        <TextBlock Text="BOT STATUS" FontWeight="Bold" FontSize="14" 
                                   Foreground="{StaticResource SolidColorBrush.Text.1}" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{Binding BotActionText}" FontSize="16" FontWeight="Bold" 
                                   Foreground="{StaticResource SolidColorBrush.Accent.Purple.3}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding BotStatusDescription}" FontSize="12" 
                                   Foreground="{StaticResource SolidColorBrush.Text.2}" TextWrapping="Wrap"/>
                        
                        <Separator Margin="0,8,0,8" Background="{StaticResource SolidColorBrush.Background.3}"/>
                        
                        <!-- Informações do Jogador -->
                        <StackPanel>
                            <TextBlock Text="Player Info" FontWeight="Bold" FontSize="12" 
                                       Foreground="{StaticResource SolidColorBrush.Text.1}" Margin="0,0,0,4"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Health:" FontSize="10" 
                                           Foreground="{StaticResource SolidColorBrush.Text.2}"/>
                                <ProgressBar Grid.Row="0" Grid.Column="1" Value="{Binding PlayerHealthPercentage}" 
                                             Maximum="100" Height="12" Margin="5,0,0,0"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Energy:" FontSize="10" 
                                           Foreground="{StaticResource SolidColorBrush.Text.2}"/>
                                <ProgressBar Grid.Row="1" Grid.Column="1" Value="{Binding PlayerEnergyPercentage}" 
                                             Maximum="100" Height="12" Margin="5,0,0,0"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Silver:" FontSize="10" 
                                           Foreground="{StaticResource SolidColorBrush.Text.2}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PlayerSilver, StringFormat={}{0:N0}}" 
                                           FontSize="10" Foreground="{StaticResource SolidColorBrush.Text.1}" Margin="5,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Controles -->
                <Border Grid.Row="2" Style="{StaticResource StatBoxStyle}" Margin="5,2,5,5">
                    <StackPanel>
                        <Button Content="■ Stop Bot [F5]" Style="{StaticResource FishingButtonStyle}" 
                                Background="{StaticResource SolidColorBrush.Accent.Purple.4}"
                                Command="{Binding StopBotCommand}" Margin="0,0,0,5"/>
                        
                        <Button Content="▶ Start Bot [F6]" Style="{StaticResource FishingButtonStyle}" 
                                Background="{StaticResource SolidColorBrush.Accent.Green.4}"
                                Command="{Binding StartBotCommand}" Margin="0,0,0,5"/>
                        
                        <Button Content="⚙ Settings" Style="{StaticResource FishingButtonStyle}" 
                                Command="{Binding OpenSettingsCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Painel Central - Área de Pesca e Minimapa -->
            <Grid Grid.Column="1" Background="{StaticResource SolidColorBrush.Background.1}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Minimapa Superior -->
                <Border Grid.Row="0" Background="{StaticResource SolidColorBrush.Background.2}" 
                        BorderBrush="{StaticResource SolidColorBrush.Background.3}" BorderThickness="1" Margin="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header do Minimapa -->
                        <Border Grid.Row="0" Background="{StaticResource SolidColorBrush.Background.3}" Padding="8,4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Position: " FontSize="12" Foreground="{StaticResource SolidColorBrush.Text.2}"/>
                                <TextBlock Text="{Binding PlayerPosition}" FontSize="12" 
                                           Foreground="{StaticResource SolidColorBrush.Text.1}"/>
                                <TextBlock Text=" | Waypoints: " FontSize="12" Foreground="{StaticResource SolidColorBrush.Text.2}" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding WaypointCount}" FontSize="12" Foreground="{StaticResource SolidColorBrush.Text.1}"/>
                                <TextBlock Text=" | Stations: " FontSize="12" Foreground="{StaticResource SolidColorBrush.Text.2}" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding StationCount}" FontSize="12" Foreground="{StaticResource SolidColorBrush.Text.1}"/>
                                <TextBlock Text=" | Zoom: " FontSize="12" Foreground="{StaticResource SolidColorBrush.Text.2}" Margin="10,0,0,0"/>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="+" Width="20" Height="20" FontSize="10" Margin="2,0" Click="ZoomIn_Click"/>
                                    <Button Content="Reset" Width="40" Height="20" FontSize="8" Margin="2,0" Click="ResetZoom_Click"/>
                                    <Button Content="-" Width="20" Height="20" FontSize="10" Margin="2,0" Click="ZoomOut_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Área do Minimapa -->
                        <Border Grid.Row="1" Background="{StaticResource SolidColorBrush.Background.1}" Margin="2">
                            <Canvas Name="MinimapCanvas" Background="{StaticResource SolidColorBrush.Background.1}">
                                <!-- Caminho do Bot (linha verde) -->
                                <Polyline Points="{Binding BotPath}" Stroke="{StaticResource SolidColorBrush.Accent.Green.3}" 
                                          StrokeThickness="2" StrokeDashArray="2,2"/>
                                
                                <!-- Pontos de interesse (pontos laranja) -->
                                <ItemsControl ItemsSource="{Binding Waypoints}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Ellipse Width="6" Height="6" Fill="{StaticResource SolidColorBrush.Accent.Orange.3}" 
                                                     Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Estações de pesca (pontos azuis) -->
                                <ItemsControl ItemsSource="{Binding FishingStations}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Ellipse Width="8" Height="8" Fill="{StaticResource SolidColorBrush.Accent.Blue.3}" 
                                                     Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Posição do jogador (G) -->
                                <Ellipse Width="12" Height="12" Fill="{StaticResource SolidColorBrush.Accent.Green.3}" 
                                         Canvas.Left="{Binding PlayerPositionX}" Canvas.Top="{Binding PlayerPositionY}"/>
                                <TextBlock Text="G" FontSize="8" FontWeight="Bold" 
                                           Foreground="{StaticResource SolidColorBrush.Text.1}" 
                                           Canvas.Left="{Binding PlayerPositionX, Converter={StaticResource OffsetConverter}}" 
                                           Canvas.Top="{Binding PlayerPositionY, Converter={StaticResource OffsetConverter}}"/>
                            </Canvas>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Área Principal de Pesca -->
                <Border Grid.Row="1" Background="{StaticResource SolidColorBrush.Background.2}" 
                        BorderBrush="{StaticResource SolidColorBrush.Background.3}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header da Área de Pesca -->
                        <Border Grid.Row="0" Background="{StaticResource SolidColorBrush.Background.3}" Padding="8,4">
                            <StackPanel Orientation="Horizontal">
                                <fa5:ImageAwesome Icon="Solid_Fish" Foreground="{StaticResource SolidColorBrush.Accent.Blue.3}" 
                                                  Width="16" Height="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Fishing Area" FontWeight="Bold" FontSize="14" 
                                           Foreground="{StaticResource SolidColorBrush.Text.1}"/>
                                <TextBlock Text=" | " FontSize="14" Foreground="{StaticResource SolidColorBrush.Text.3}" Margin="5,0"/>
                                <TextBlock Text="Bobber Detection: " FontSize="12" Foreground="{StaticResource SolidColorBrush.Text.2}"/>
                                <Ellipse Width="8" Height="8" Fill="{Binding BobberDetected, Converter={StaticResource BooleanToColorConverter}}" Margin="2,0"/>
                                <TextBlock Text="{Binding BobberStatus}" FontSize="12" Foreground="{StaticResource SolidColorBrush.Text.1}" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Área de Captura e Visualização -->
                        <Grid Grid.Row="1" Margin="5">
                            <Border Background="{StaticResource SolidColorBrush.Background.1}" 
                                    BorderBrush="{StaticResource SolidColorBrush.Background.3}" BorderThickness="1">
                                <Grid>
                                    <!-- Área de captura da tela -->
                                    <Image Name="ScreenCaptureImage" Stretch="Uniform" 
                                           Source="{Binding ScreenCapture}" Margin="2"/>
                                    
                                    <!-- Overlay de detecção do bobber -->
                                    <Canvas>
                                        <!-- Círculo de detecção do bobber -->
                                        <Ellipse Width="20" Height="20" 
                                                 Stroke="{StaticResource SolidColorBrush.Accent.Green.3}" 
                                                 StrokeThickness="2" 
                                                 Fill="Transparent"
                                                 Canvas.Left="{Binding BobberDetectionX}" 
                                                 Canvas.Top="{Binding BobberDetectionY}"
                                                 Visibility="{Binding BobberDetected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        
                                        <!-- Linha de pesca (linha tracejada azul) -->
                                        <Line X1="{Binding FishingLineStartX}" Y1="{Binding FishingLineStartY}"
                                              X2="{Binding FishingLineEndX}" Y2="{Binding FishingLineEndY}"
                                              Stroke="{StaticResource SolidColorBrush.Accent.Blue.3}" 
                                              StrokeThickness="2" StrokeDashArray="3,3"
                                              Visibility="{Binding FishingLineVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        
                                        <!-- Área de pesca (arco branco) -->
                                        <Path Data="{Binding FishingAreaPath}" 
                                              Stroke="{StaticResource SolidColorBrush.Text.1}" 
                                              StrokeThickness="1" 
                                              Fill="Transparent"
                                              StrokeDashArray="2,2"
                                              Visibility="{Binding FishingAreaVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        
                                        <!-- Pontos de pesca ativos (diamantes verdes) -->
                                        <ItemsControl ItemsSource="{Binding ActiveFishingSpots}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <Canvas/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Polygon Points="0,-8,8,0,0,8,-8,0" 
                                                             Fill="{StaticResource SolidColorBrush.Accent.Green.3}" 
                                                             Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Canvas>
                                    
                                    <!-- Controles de captura -->
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5">
                                        <Button Content="📷 Capture" Width="80" Height="25" FontSize="10" 
                                                Style="{StaticResource FishingButtonStyle}" 
                                                Click="CaptureScreen_Click" Margin="2"/>
                                        <Button Content="🎯 Test Detection" Width="100" Height="25" FontSize="10" 
                                                Style="{StaticResource FishingButtonStyle}" 
                                                Click="TestDetection_Click" Margin="2"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Painel Direito - Log e Configurações -->
            <Grid Grid.Column="2" Background="{StaticResource SolidColorBrush.Background.2}" Margin="1,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Log de Atividades -->
                <Border Grid.Row="0" Style="{StaticResource StatBoxStyle}" Margin="5,5,5,2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa5:ImageAwesome Icon="Solid_List" Foreground="{StaticResource SolidColorBrush.Text.1}" 
                                              Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Activity Log" FontWeight="Bold" FontSize="14" 
                                       Foreground="{StaticResource SolidColorBrush.Text.1}"/>
                            <Button Content="Clear" Width="40" Height="20" FontSize="8" 
                                    Style="{StaticResource FishingButtonStyle}" 
                                    HorizontalAlignment="Right" Click="ClearLog_Click"/>
                        </StackPanel>
                        
                        <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ActivityLog}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SolidColorBrush.Background.1}" 
                                                BorderBrush="{StaticResource SolidColorBrush.Background.3}" 
                                                BorderThickness="1" CornerRadius="2" Margin="0,1">
                                            <StackPanel Orientation="Horizontal" Margin="4">
                                                <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" 
                                                           FontSize="10" Foreground="{StaticResource SolidColorBrush.Text.3}" 
                                                           Width="50"/>
                                                <TextBlock Text="{Binding Message}" FontSize="10" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" 
                                                           TextWrapping="Wrap" Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                
                <!-- Status de Conexão -->
                <Border Grid.Row="1" Style="{StaticResource StatBoxStyle}" Margin="5,2,5,5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{Binding ConnectionStatusColor}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding ConnectionStatusText}" FontSize="12" 
                                       Foreground="{StaticResource SolidColorBrush.Text.1}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
