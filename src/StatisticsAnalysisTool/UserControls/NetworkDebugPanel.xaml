<UserControl x:Class="StatisticsAnalysisTool.UserControls.NetworkDebugPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🔍 Network Debug Panel" 
                          Foreground="White" 
                          FontSize="16" 
                          FontWeight="Bold"/>
                <TextBlock x:Name="StatusText" 
                          Text="● Disconnected" 
                          Foreground="Red" 
                          Margin="20,0,0,0" 
                          VerticalAlignment="Center"/>
                <Button x:Name="ClearButton" 
                       Content="Clear" 
                       Background="#007ACC" 
                       Foreground="White" 
                       BorderThickness="0" 
                       Padding="10,5" 
                       Margin="20,0,0,0" 
                       Click="ClearButton_Click"/>
                <Button x:Name="TestButton" 
                       Content="Test" 
                       Background="#28A745" 
                       Foreground="White" 
                       BorderThickness="0" 
                       Padding="10,5" 
                       Margin="10,0,0,0" 
                       Click="TestButton_Click"/>
                <CheckBox x:Name="AutoScrollCheckBox" 
                         Content="Auto Scroll" 
                         Foreground="White" 
                         IsChecked="True" 
                         Margin="20,0,0,0" 
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Log Display -->
        <ScrollViewer x:Name="LogScrollViewer" 
                     Grid.Row="1" 
                     Background="#1E1E1E" 
                     VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="LogStackPanel" 
                       Background="Transparent"/>
        </ScrollViewer>
        
        <!-- Filter Controls -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filter:" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="0,0,10,0"/>
                <CheckBox x:Name="ShowEventsCheckBox" 
                         Content="Events" 
                         Foreground="White" 
                         IsChecked="True" 
                         Margin="0,0,10,0" 
                         VerticalAlignment="Center"/>
                <CheckBox x:Name="ShowRequestsCheckBox" 
                         Content="Requests" 
                         Foreground="White" 
                         IsChecked="True" 
                         Margin="0,0,10,0" 
                         VerticalAlignment="Center"/>
                <CheckBox x:Name="ShowResponsesCheckBox" 
                         Content="Responses" 
                         Foreground="White" 
                         IsChecked="True" 
                         Margin="0,0,10,0" 
                         VerticalAlignment="Center"/>
                <TextBox x:Name="SearchTextBox" 
                        Width="200" 
                        Background="#3C3C3C" 
                        Foreground="White" 
                        BorderBrush="#555555" 
                        TextChanged="SearchTextBox_TextChanged" 
                        Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
