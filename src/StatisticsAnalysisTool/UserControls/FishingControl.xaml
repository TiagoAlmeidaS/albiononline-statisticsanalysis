<UserControl x:Class="StatisticsAnalysisTool.UserControls.FishingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:StatisticsAnalysisTool.ViewModels"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:local="clr-namespace:StatisticsAnalysisTool.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=viewModels:FishingControlViewModel}">
    
    <UserControl.Resources>
        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.1}"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
        
        <Style x:Key="ValueLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.2}"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header com Status e Controles Principais -->
        <Border Grid.Row="0" Background="{StaticResource SolidColorBrush.Background.2}" 
                CornerRadius="5" Margin="5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Status do Sistema -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Style="{StaticResource StatusIndicator}" Fill="{Binding StatusColor}"/>
                    <TextBlock Text="{Binding StatusText}" Style="{StaticResource InfoLabel}" FontSize="14"/>
                    <TextBlock Text="|" Margin="10,0" Foreground="{StaticResource SolidColorBrush.Text.3}"/>
                    <TextBlock Text="Motor de Decisão:" Style="{StaticResource InfoLabel}"/>
                    <TextBlock Text="{Binding IsDecisionEngineActive, Converter={StaticResource BooleanToTextConverter}}" 
                               Style="{StaticResource ValueLabel}"/>
                    <TextBlock Text="|" Margin="10,0" Foreground="{StaticResource SolidColorBrush.Text.3}"/>
                    <TextBlock Text="Pesca:" Style="{StaticResource InfoLabel}"/>
                    <TextBlock Text="{Binding CurrentFishingState}" Style="{StaticResource ValueLabel}"/>
                </StackPanel>
                
                <!-- Controles Principais -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Iniciar Pesca" Width="120" Height="30" Margin="5,0"
                            Command="{Binding StartFishingCommand}" 
                            IsEnabled="{Binding IsFishingActive, Converter={StaticResource InverseBooleanConverter}}"
                            Background="{StaticResource SolidColorBrush.Accent.Green.4}"/>
                    <Button Content="Parar Pesca" Width="120" Height="30" Margin="5,0"
                            Command="{Binding StopFishingCommand}"
                            IsEnabled="{Binding IsFishingActive}"
                            Background="{StaticResource SolidColorBrush.Accent.Red.4}"/>
                    <Button Content="Atualizar Zonas" Width="120" Height="30" Margin="5,0"
                            Command="{Binding RefreshZonesCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Painel de Informações e Configurações -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Informações do Jogador -->
            <Border Grid.Column="0" Background="{StaticResource SolidColorBrush.Background.2}" 
                    CornerRadius="5" Margin="2" Padding="10">
                <StackPanel>
                    <TextBlock Text="Informações do Jogador" FontWeight="Bold" FontSize="14" 
                               Foreground="{StaticResource SolidColorBrush.Text.1}" Margin="0,0,0,10"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Saúde:" Style="{StaticResource InfoLabel}"/>
                        <ProgressBar Grid.Row="0" Grid.Column="1" Value="{Binding PlayerHealthPercentage}" 
                                     Maximum="100" Height="20" Margin="5,0,0,0"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PlayerHealthPercentage, StringFormat={}{0:F1}%}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ValueLabel}"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Energia:" Style="{StaticResource InfoLabel}"/>
                        <ProgressBar Grid.Row="1" Grid.Column="1" Value="{Binding PlayerEnergyPercentage}" 
                                     Maximum="100" Height="20" Margin="5,0,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PlayerEnergyPercentage, StringFormat={}{0:F1}%}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ValueLabel}"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Combate:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding IsPlayerInCombat, Converter={StaticResource BooleanToTextConverter}}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Zona Segura:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding IsPlayerInSafeZone, Converter={StaticResource BooleanToTextConverter}}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Estatísticas de Pesca -->
            <Border Grid.Column="1" Background="{StaticResource SolidColorBrush.Background.2}" 
                    CornerRadius="5" Margin="2" Padding="10">
                <StackPanel>
                    <TextBlock Text="Estatísticas de Pesca" FontWeight="Bold" FontSize="14" 
                               Foreground="{StaticResource SolidColorBrush.Text.1}" Margin="0,0,0,10"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tentativas:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FishingAttempts}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Sucessos:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SuccessfulCatches}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Falhas:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FailedCatches}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Taxa de Sucesso:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SuccessRate, StringFormat={}{0:F1}%}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Tempo Médio:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding AverageCatchTime, StringFormat={}{0:mm\\:ss}}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Estatísticas do Motor de Decisão -->
            <Border Grid.Column="2" Background="{StaticResource SolidColorBrush.Background.2}" 
                    CornerRadius="5" Margin="2" Padding="10">
                <StackPanel>
                    <TextBlock Text="Motor de Decisão" FontWeight="Bold" FontSize="14" 
                               Foreground="{StaticResource SolidColorBrush.Text.1}" Margin="0,0,0,10"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Decisões:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalDecisions}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Taxa de Sucesso:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DecisionSuccessRate, StringFormat={}{0:F1}%}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Tempo Médio:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding AverageDecisionTime, StringFormat={}{0:F0}ms}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Comportamentos:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding BehaviorRatio}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Última Decisão:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding LastDecision}" 
                                   Style="{StaticResource ValueLabel}" Margin="5,0,0,0" TextWrapping="Wrap"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Conteúdo Principal -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Abas de Navegação -->
            <TabControl Grid.Row="0" Margin="0,0,0,5" Background="{StaticResource SolidColorBrush.Background.2}">
                <TabItem Header="Pesca e Zonas" IsSelected="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
            
                        <GridSplitter Grid.Column="1" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" 
                                      HorizontalAlignment="Stretch" Background="{StaticResource SolidColorBrush.Accent.Blue.4}"/>
                        
                        <!-- Painel Principal - Zonas de Pesca e Log -->
                        <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <GridSplitter Grid.Row="1" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" 
                              HorizontalAlignment="Stretch" Background="{StaticResource SolidColorBrush.Accent.Blue.4}"/>
                
                <!-- Zonas de Pesca Disponíveis -->
                <Border Grid.Row="0" Background="{StaticResource SolidColorBrush.Background.2}" 
                        CornerRadius="5" Margin="0,0,0,2" Padding="10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <fa5:ImageAwesome Icon="Solid_Fish" Foreground="{StaticResource SolidColorBrush.Text.1}" 
                                              Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Zonas de Pesca Disponíveis" FontWeight="Bold" FontSize="14" 
                                       Foreground="{StaticResource SolidColorBrush.Text.1}"/>
                        </StackPanel>
                        
                        <DataGrid ItemsSource="{Binding AvailableFishingZones}" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tipo" Binding="{Binding Type}" Width="100"/>
                                <DataGridTextColumn Header="Posição" Binding="{Binding Position, StringFormat={}{0:F0}}" Width="120"/>
                                <DataGridTextColumn Header="Peixes" Binding="{Binding FishCount}" Width="60"/>
                                <DataGridTextColumn Header="Valor Est." Binding="{Binding EstimatedValue, StringFormat={}{0:N0}}" Width="100"/>
                                <DataGridTextColumn Header="Distância" Binding="{Binding Distance, StringFormat={}{0:F0}m}" Width="80"/>
                                <DataGridCheckBoxColumn Header="Ativa" Binding="{Binding IsActive}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                
                <!-- Log de Decisões -->
                <Border Grid.Row="2" Background="{StaticResource SolidColorBrush.Background.2}" 
                        CornerRadius="5" Margin="0,2,0,0" Padding="10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <fa5:ImageAwesome Icon="Solid_List" Foreground="{StaticResource SolidColorBrush.Text.1}" 
                                              Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Log de Decisões" FontWeight="Bold" FontSize="14" 
                                       Foreground="{StaticResource SolidColorBrush.Text.1}"/>
                            <Button Content="Limpar" Width="60" Height="25" Margin="10,0,0,0"
                                    Command="{Binding ClearLogCommand}" HorizontalAlignment="Right"/>
                        </StackPanel>
                        
                        <DataGrid ItemsSource="{Binding DecisionLog}" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Hora" Binding="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" Width="80"/>
                                <DataGridTextColumn Header="Ação" Binding="{Binding Action}" Width="120"/>
                                <DataGridTextColumn Header="Confiança" Binding="{Binding Confidence, StringFormat={}{0}%}" Width="80"/>
                                <DataGridTextColumn Header="Prioridade" Binding="{Binding Priority}" Width="80"/>
                                <DataGridTextColumn Header="Tempo" Binding="{Binding ProcessingTime, StringFormat={}{0:F0}ms}" Width="80"/>
                                <DataGridCheckBoxColumn Header="IA" Binding="{Binding IsAIDecision}" Width="40"/>
                                <DataGridTextColumn Header="Razão" Binding="{Binding Reason}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                        </Border>
                        </Grid>
                        
                        <!-- Painel Lateral - Configurações e Status -->
                        <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <GridSplitter Grid.Row="1" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" 
                              HorizontalAlignment="Stretch" Background="{StaticResource SolidColorBrush.Accent.Blue.4}"/>
                
                <!-- Configurações -->
                <Border Grid.Row="0" Background="{StaticResource SolidColorBrush.Background.2}" 
                        CornerRadius="5" Margin="0,0,0,2" Padding="10">
                    <ScrollViewer>
                        <StackPanel>
                            <TextBlock Text="Configurações" FontWeight="Bold" FontSize="14" 
                                       Foreground="{StaticResource SolidColorBrush.Text.1}" Margin="0,0,0,10"/>
                            
                            <!-- Configurações Básicas -->
                            <GroupBox Header="Configurações Básicas" Margin="0,0,0,10">
                                <StackPanel>
                                    <CheckBox Content="Pesca Automática" IsChecked="{Binding IsAutoFishingEnabled}" Margin="0,5"/>
                                    <CheckBox Content="Resolução de Minigame" IsChecked="{Binding IsMinigameResolutionEnabled}" Margin="0,5"/>
                                    <CheckBox Content="Decisões por IA" IsChecked="{Binding EnableAIDecisions}" Margin="0,5"/>
                                </StackPanel>
                            </GroupBox>
                            
                            <!-- Configurações de Saúde/Energia -->
                            <GroupBox Header="Saúde e Energia" Margin="0,0,0,10">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="Saúde Mínima:" Width="100" VerticalAlignment="Center"/>
                                        <Slider Value="{Binding MinHealthPercentage}" Minimum="10" Maximum="100" 
                                                Width="100" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding MinHealthPercentage, StringFormat={}{0}%}" 
                                                   Width="40" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="Energia Mínima:" Width="100" VerticalAlignment="Center"/>
                                        <Slider Value="{Binding MinEnergyPercentage}" Minimum="10" Maximum="100" 
                                                Width="100" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding MinEnergyPercentage, StringFormat={}{0}%}" 
                                                   Width="40" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            
                            <!-- Configurações Avançadas -->
                            <GroupBox Header="Configurações Avançadas" Margin="0,0,0,10">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="Máx. Tentativas:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding MaxAttempts}" Width="60" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="Cooldown (s):" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CooldownSeconds}" Width="60" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="Máx. Falhas:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding MaxConsecutiveFailures}" Width="60" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="Confiança IA:" Width="100" VerticalAlignment="Center"/>
                                        <Slider Value="{Binding AIConfidenceThreshold}" Minimum="0" Maximum="100" 
                                                Width="100" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding AIConfidenceThreshold, StringFormat={}{0}%}" 
                                                   Width="40" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            
                            <Button Content="Aplicar Configurações" Width="150" Height="30" 
                                    Command="{Binding ApplySettingsCommand}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                
                <!-- Status dos Comportamentos -->
                <Border Grid.Row="2" Background="{StaticResource SolidColorBrush.Background.2}" 
                        CornerRadius="5" Margin="0,2,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Status dos Comportamentos" FontWeight="Bold" FontSize="14" 
                                   Foreground="{StaticResource SolidColorBrush.Text.1}" Margin="0,0,0,10"/>
                        
                        <DataGrid ItemsSource="{Binding BehaviorStatuses}" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Comportamento" Binding="{Binding Name}" Width="*"/>
                                <DataGridCheckBoxColumn Header="Ativo" Binding="{Binding IsActive}" Width="50"/>
                                <DataGridTextColumn Header="Prioridade" Binding="{Binding Priority}" Width="60"/>
                                <DataGridTextColumn Header="Sucesso" Binding="{Binding SuccessRate, StringFormat={}{0:F0}%}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        </StackPanel>
                        </Border>
                        </Grid>
                    </Grid>
                </TabItem>
                
                <!-- Aba de Configuração de Visão -->
                <TabItem Header="Configuração de Visão">
                    <Grid>
                        <local:VisionConfigurationControl DataContext="{Binding VisionConfigurationViewModel}"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
