<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="StatisticsAnalysisTool.macOS.Controls.DungeonControl">

    <UserControl.Styles>
        <!-- Albion Online Dungeon Styles -->
        <Style Selector="Border.dungeon-panel">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style Selector="TextBlock.dungeon-title">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF6B35"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style Selector="Button.dungeon-button">
            <Setter Property="Background" Value="#FF6B35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF6B35"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <Style Selector="Button.dungeon-button:pointerover">
            <Setter Property="Background" Value="#FF7A4A"/>
        </Style>

        <Style Selector="Button.dungeon-button:pressed">
            <Setter Property="Background" Value="#E55A2B"/>
        </Style>

        <Style Selector="Button.delete-button">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="BorderBrush" Value="#C0392B"/>
        </Style>

        <Style Selector="Button.delete-button:pointerover">
            <Setter Property="Background" Value="#EC7063"/>
        </Style>

        <Style Selector="ListBox.dungeon-list">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <Style Selector="ListBoxItem.dungeon-entry">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <Style Selector="ListBoxItem.dungeon-entry:selected">
            <Setter Property="Background" Value="#FF6B35"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>

        <Style Selector="ListBoxItem.dungeon-entry:pointerover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>

        <Style Selector="Border.dungeon-card">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <Style Selector="TextBlock.dungeon-name">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <Style Selector="TextBlock.dungeon-info">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
        </Style>

        <Style Selector="TextBlock.dungeon-value">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
        </Style>

        <Style Selector="CheckBox.dungeon-check">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Dungeon Header -->
        <Border Grid.Row="0" Classes="dungeon-panel">
            <StackPanel>
                <TextBlock Text="🏰 Dungeon Tracking" Classes="dungeon-title"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Total Dungeons: " FontSize="14" Foreground="#B0B0B0"/>
                            <TextBlock Text="24" FontSize="14" Foreground="#E0E0E0" Name="TotalDungeonsText"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Today: " FontSize="12" Foreground="#B0B0B0"/>
                            <TextBlock Text="3" FontSize="12" Foreground="#4CAF50" Name="TodayDungeonsText"/>
                            <TextBlock Text=" | " FontSize="12" Foreground="#666" Margin="10,0"/>
                            <TextBlock Text="Total Fame: " FontSize="12" Foreground="#B0B0B0"/>
                            <TextBlock Text="125,000" FontSize="12" Foreground="#E0E0E0" Name="TotalFameText"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="🔄 Reset" Classes="dungeon-button" 
                                Click="ResetDungeons_Click"/>
                        <Button Content="🗑️ Delete Selected" Classes="dungeon-button delete-button" 
                                Click="DeleteSelected_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Dungeon Content -->
        <Border Grid.Row="1" Classes="dungeon-panel">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Dungeon List -->
                <ListBox Grid.Column="0" Name="DungeonListBox" Classes="dungeon-list">
                    <ListBoxItem Classes="dungeon-entry">
                        <Border Classes="dungeon-card">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Dungeon Icon -->
                                <Border Grid.Column="0" Width="40" Height="40" 
                                        Background="#4CAF50" CornerRadius="3" Margin="0,0,10,0">
                                    <TextBlock Text="🏰" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Dungeon Info -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Solo Dungeon T6" Classes="dungeon-name"/>
                                    <TextBlock Text="Bridgewatch - 2 hours ago" Classes="dungeon-info"/>
                                    <TextBlock Text="Completed" FontSize="10" Foreground="#4CAF50"/>
                                </StackPanel>

                                <!-- Fame Value -->
                                <TextBlock Grid.Column="2" Text="8,500" Classes="dungeon-value" 
                                           HorizontalAlignment="Right" Margin="0,0,10,0"/>

                                <!-- Checkbox -->
                                <CheckBox Grid.Column="3" Classes="dungeon-check" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ListBoxItem>

                    <ListBoxItem Classes="dungeon-entry">
                        <Border Classes="dungeon-card">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Dungeon Icon -->
                                <Border Grid.Column="0" Width="40" Height="40" 
                                        Background="#2196F3" CornerRadius="3" Margin="0,0,10,0">
                                    <TextBlock Text="🏰" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Dungeon Info -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Group Dungeon T7" Classes="dungeon-name"/>
                                    <TextBlock Text="Martlock - 4 hours ago" Classes="dungeon-info"/>
                                    <TextBlock Text="Completed" FontSize="10" Foreground="#4CAF50"/>
                                </StackPanel>

                                <!-- Fame Value -->
                                <TextBlock Grid.Column="2" Text="15,200" Classes="dungeon-value" 
                                           HorizontalAlignment="Right" Margin="0,0,10,0"/>

                                <!-- Checkbox -->
                                <CheckBox Grid.Column="3" Classes="dungeon-check" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ListBoxItem>

                    <ListBoxItem Classes="dungeon-entry">
                        <Border Classes="dungeon-card">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Dungeon Icon -->
                                <Border Grid.Column="0" Width="40" Height="40" 
                                        Background="#FF9800" CornerRadius="3" Margin="0,0,10,0">
                                    <TextBlock Text="🏰" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Dungeon Info -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Hellgate T5" Classes="dungeon-name"/>
                                    <TextBlock Text="Caerleon - 6 hours ago" Classes="dungeon-info"/>
                                    <TextBlock Text="Failed" FontSize="10" Foreground="#E74C3C"/>
                                </StackPanel>

                                <!-- Fame Value -->
                                <TextBlock Grid.Column="2" Text="0" Classes="dungeon-value" 
                                           HorizontalAlignment="Right" Margin="0,0,10,0" Foreground="#E74C3C"/>

                                <!-- Checkbox -->
                                <CheckBox Grid.Column="3" Classes="dungeon-check" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ListBoxItem>

                    <ListBoxItem Classes="dungeon-entry">
                        <Border Classes="dungeon-card">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Dungeon Icon -->
                                <Border Grid.Column="0" Width="40" Height="40" 
                                        Background="#9C27B0" CornerRadius="3" Margin="0,0,10,0">
                                    <TextBlock Text="🏰" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Dungeon Info -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Avalonian Dungeon T8" Classes="dungeon-name"/>
                                    <TextBlock Text="Black Zone - 1 day ago" Classes="dungeon-info"/>
                                    <TextBlock Text="Completed" FontSize="10" Foreground="#4CAF50"/>
                                </StackPanel>

                                <!-- Fame Value -->
                                <TextBlock Grid.Column="2" Text="25,800" Classes="dungeon-value" 
                                           HorizontalAlignment="Right" Margin="0,0,10,0"/>

                                <!-- Checkbox -->
                                <CheckBox Grid.Column="3" Classes="dungeon-check" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ListBoxItem>
                </ListBox>

                <!-- Dungeon Statistics Panel -->
                <Border Grid.Column="1" Classes="dungeon-panel" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Dungeon Statistics" Classes="dungeon-title"/>
                        
                        <Border Classes="dungeon-panel" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Session Summary" FontSize="12" FontWeight="Bold" 
                                           Foreground="#B0B0B0" Margin="0,0,0,5"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,5,5">
                                        <TextBlock Text="Completed:" FontSize="10" Foreground="#B0B0B0"/>
                                        <TextBlock Text="18" FontSize="12" Foreground="#4CAF50" Name="CompletedDungeonsText"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,0,0,5">
                                        <TextBlock Text="Failed:" FontSize="10" Foreground="#B0B0B0"/>
                                        <TextBlock Text="6" FontSize="12" Foreground="#E74C3C" Name="FailedDungeonsText"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,5,5">
                                        <TextBlock Text="Success Rate:" FontSize="10" Foreground="#B0B0B0"/>
                                        <TextBlock Text="75%" FontSize="12" Foreground="#FFD700" Name="SuccessRateText"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,0,5">
                                        <TextBlock Text="Avg Fame:" FontSize="10" Foreground="#B0B0B0"/>
                                        <TextBlock Text="5,200" FontSize="12" Foreground="#E0E0E0" Name="AvgFameText"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,5,5">
                                        <TextBlock Text="Best Run:" FontSize="10" Foreground="#B0B0B0"/>
                                        <TextBlock Text="25,800" FontSize="12" Foreground="#27AE60" Name="BestRunText"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="5,0,0,5">
                                        <TextBlock Text="Total Time:" FontSize="10" Foreground="#B0B0B0"/>
                                        <TextBlock Text="12h 30m" FontSize="12" Foreground="#E0E0E0" Name="TotalTimeText"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Classes="dungeon-panel" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Dungeon Types" FontSize="12" FontWeight="Bold" 
                                           Foreground="#B0B0B0" Margin="0,0,0,5"/>
                                
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,5,0"/>
                                        <TextBlock Text="Solo: 8" FontSize="10" Foreground="#E0E0E0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <Ellipse Width="8" Height="8" Fill="#2196F3" Margin="0,0,5,0"/>
                                        <TextBlock Text="Group: 6" FontSize="10" Foreground="#E0E0E0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <Ellipse Width="8" Height="8" Fill="#FF9800" Margin="0,0,5,0"/>
                                        <TextBlock Text="Hellgate: 4" FontSize="10" Foreground="#E0E0E0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <Ellipse Width="8" Height="8" Fill="#9C27B0" Margin="0,0,5,0"/>
                                        <TextBlock Text="Avalonian: 6" FontSize="10" Foreground="#E0E0E0"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel>
                            <Button Content="📊 View Analytics" Classes="dungeon-button" 
                                    Click="ViewAnalytics_Click" Margin="0,0,0,5"/>
                            <Button Content="📈 Fame Chart" Classes="dungeon-button" 
                                    Click="FameChart_Click" Margin="0,0,0,5"/>
                            <Button Content="⚙️ Settings" Classes="dungeon-button" 
                                    Click="OpenSettings_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1E1E1E" BorderBrush="#4A4A4A" BorderThickness="0,1,0,0" Height="30">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="Last update: " FontSize="12" Foreground="#B0B0B0"/>
                <TextBlock Text="5 minutes ago" FontSize="12" Foreground="#E0E0E0" Name="LastUpdateText"/>
                <TextBlock Text=" | " FontSize="12" Foreground="#666" Margin="10,0"/>
                <TextBlock Text="Selected: " FontSize="12" Foreground="#B0B0B0"/>
                <TextBlock Text="0" FontSize="12" Foreground="#E0E0E0" Name="SelectedCountText"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
