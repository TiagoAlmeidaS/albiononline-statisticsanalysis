<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="36"
        x:Class="StatisticsAnalysisTool.macOS.Views.ToolLoadingWindow"
        Title="Loading..."
        Height="36" Width="600" MinHeight="36" MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ShowInTaskbar="False"
        CanResize="False">

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontFamily" Value="Segoe UI, Arial, sans-serif"/>
        </Style>

        <Style Selector="ProgressBar">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#FF6B35"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
    </Window.Styles>

    <Grid>
        <!-- Progress Bar -->
        <ProgressBar Value="{Binding ProgressValue}" Maximum="100" Height="36" 
                     Background="#2D2D2D" Foreground="#FF6B35" BorderBrush="#4A4A4A" 
                     BorderThickness="1"/>

        <!-- Loading Content -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Tool Icon -->
            <Border Width="24" Height="24" Background="#FF6B35" CornerRadius="12" Margin="0,0,10,0">
                <TextBlock Text="⚙️" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            
            <!-- Loading Text -->
            <TextBlock Text="{Binding LoadingText, FallbackValue=Loading...}" FontSize="14" 
                       FontWeight="SemiBold" Foreground="#E0E0E0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
