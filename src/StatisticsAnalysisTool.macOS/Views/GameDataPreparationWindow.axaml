<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="using:StatisticsAnalysisTool.macOS.ViewModels"
        mc:Ignorable="d" d:DesignWidth="950" d:DesignHeight="500"
        x:Class="StatisticsAnalysisTool.macOS.Views.GameDataPreparationWindow"
        Title="Game Data Preparation" 
        Height="500" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        FontSize="14"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">

    <Window.Styles>
        <!-- Albion Online Dark Theme Styles -->
        <Style Selector="Window">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontFamily" Value="Segoe UI, Arial, sans-serif"/>
        </Style>

        <!-- Button Styles - Albion Online Style -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#FF6B35"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF6B35"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#FF7A4A"/>
        </Style>

        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#E55A2B"/>
        </Style>

        <!-- TextBlock Styles -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <!-- Label Styles -->
        <Style Selector="Label">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <!-- Border Styles -->
        <Style Selector="Border">
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="Background" Value="#2D2D2D"/>
        </Style>

        <!-- Separator Styles -->
        <Style Selector="Separator">
            <Setter Property="Background" Value="#4A4A4A"/>
        </Style>
    </Window.Styles>

    <Grid>
        <!-- Header Bar -->
        <Border Grid.Row="0" Height="40" Background="#2D2D2D" BorderBrush="#4A4A4A" BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="Game Data Preparation" 
                           FontSize="16" FontWeight="Bold" Foreground="#E0E0E0"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <!-- Close Button -->
                <Button Content="×" Width="30" Height="30" FontSize="16" 
                        Click="CloseButton_Click" Background="#E74C3C" BorderBrush="#C0392B"
                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Margin="20">
            <!-- Instructions -->
            <TextBlock Text="Please select the Albion Online game folder to continue." 
                       FontSize="18" FontWeight="Bold" Foreground="#E0E0E0" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <!-- Steam vs Regular Installation -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <!-- Regular Installation -->
                <StackPanel Orientation="Vertical" Margin="10">
                    <Label Content="Regular Installation" 
                           Foreground="#FF6B35" FontSize="18" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Border Background="#2D2D2D" BorderBrush="#4A4A4A" BorderThickness="1" 
                            CornerRadius="3" Padding="20" Width="300" Height="200">
                        <StackPanel>
                            <TextBlock Text="📁 /Applications/Albion Online.app" 
                                       FontSize="14" Foreground="#B0B0B0" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Select the main Albion Online application folder." 
                                       FontSize="12" Foreground="#B0B0B0" 
                                       TextAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Separator -->
                <Separator Background="#4A4A4A" VerticalAlignment="Stretch" Width="2" Margin="10"/>

                <!-- Steam Installation -->
                <StackPanel Orientation="Vertical" Margin="10">
                    <Label Content="Steam Installation" 
                           Foreground="#FF6B35" FontSize="18" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Border Background="#2D2D2D" BorderBrush="#4A4A4A" BorderThickness="1" 
                            CornerRadius="3" Padding="20" Width="300" Height="200">
                        <StackPanel>
                            <TextBlock Text="🎮 Steam Library Folder" 
                                       FontSize="14" Foreground="#B0B0B0" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="If you installed through Steam, select the Steam installation folder." 
                                       FontSize="12" Foreground="#B0B0B0" 
                                       TextAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}" 
                       FontSize="16" TextAlignment="Center" HorizontalAlignment="Center" 
                       Foreground="#E74C3C" Height="60" Margin="0,0,0,20"/>

            <!-- Selected Folder Display -->
            <Border Background="#2D2D2D" BorderBrush="#4A4A4A" BorderThickness="1" 
                    CornerRadius="3" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Selected Game Folder:" 
                               FontSize="14" FontWeight="Bold" Foreground="#E0E0E0" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedGameFolder}" 
                               FontSize="12" Foreground="#B0B0B0" 
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="{Binding TranslationSelectMainGameFolder}" 
                        Click="SelectGameFolder_Click" 
                        Width="300" Height="40" FontSize="16" FontWeight="Bold" 
                        Margin="0,0,20,0"/>
                
                <Button Content="{Binding TranslationConfirm}" 
                        IsEnabled="{Binding IsConfirmButtonEnabled}"
                        Click="ConfirmButton_Click" 
                        Width="200" Height="40" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
